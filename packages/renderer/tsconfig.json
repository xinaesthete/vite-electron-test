{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "esModuleInterop": false,
    "skipLibCheck": false,
    "paths": {
      "/@/*": [ "./src/*" ],
      "@common/*": ["../common/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../preload/types/electron-api.d.ts",
    "../common/**/*.ts"
  ]
}
