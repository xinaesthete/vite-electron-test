{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "esModuleInterop": false,
    "skipLibCheck": false,
    "paths": {
      "/@/*": [
        "./src/*"
      ],
      "/@commmon/*": ["../common/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../preload/types/electron-api.d.ts",
    "../common/**/*.ts"
  ]
}
